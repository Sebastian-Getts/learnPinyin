/* 按键高亮特效 - 九键模式（全键） */
.keyboard2 .firstline .twentysixbtn.key-highlight {
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
  color: #ffffff;
  box-shadow: 0 4rpx 16rpx rgba(255, 215, 0, 0.6),
              0 0 30rpx rgba(255, 215, 0, 0.4),
              inset 0 2rpx 6rpx rgba(255, 255, 255, 0.3);
  animation: keyHighlightPulseSmall 1s ease-in-out infinite;
  transform: scale(1.08);
  border: 2rpx solid rgba(255, 215, 0, 0.8);
  z-index: 1;
  position: relative;
}

@keyframes keyHighlightPulseSmall {
  0%, 100% {
    box-shadow: 0 4rpx 16rpx rgba(255, 215, 0, 0.6),
                0 0 30rpx rgba(255, 215, 0, 0.4);
    transform: scale(1.08);
  }
  50% {
    box-shadow: 0 6rpx 24rpx rgba(255, 215, 0, 0.8),
                0 0 50rpx rgba(255, 215, 0, 0.6);
    transform: scale(1.12);
  }
}


page {
  background: linear-gradient(180deg, #f5f7fa 0%, #e8ecf3 40%, #c3cfe2 80%, #a8b5d0 100%);
  min-height: 100vh;
  transition: background 0.3s ease;
}

/* 页面包装器 - 设置为固定布局，防止滚动 */
.page-wrapper {
  min-height: 100vh;
  padding-bottom: 0;
  overflow: hidden;
  position: relative;
}

/* 挑战模式下，为页面底部添加padding，避免键盘遮挡按钮 */
.page-wrapper-challenge {
  padding-bottom: 380rpx;
}

.container {
  display: flex;
  flex-direction: column;
}

.keyboard {
  display: flex;
  flex-flow: row wrap;
  justify-content: space-around;
  background: linear-gradient(180deg, #e8ecf3 0%, #c3cfe2 50%, #a8b5d0 100%);
  width: 100%;
  bottom: 0;
  position: fixed;
  box-shadow: 0 -4rpx 20rpx rgba(163, 181, 208, 0.3);
  padding-top: 20rpx;
  padding-bottom: env(safe-area-inset-bottom);
  z-index: 10;
}

.boardbtn {
  width: 200rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #ffffff 0%, #f0f0f0 100%);
  margin: 20rpx;
  text-align: center;
  line-height: 100rpx;
  padding: 5rpx;
  border-radius: 30rpx;
  font-size: 42rpx;
  color: #4a5568;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  transition: all 0.2s ease;
  font-weight: 500;
}

.boardbtn:active {
  background: linear-gradient(135deg, #a8b5d0 0%, #c3cfe2 100%);
  color: #4a5568;
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(163, 181, 208, 0.4);
}

/* 按键高亮特效 - 全键模式 */
.boardbtn.key-highlight {
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
  color: #ffffff;
  box-shadow: 0 6rpx 20rpx rgba(255, 215, 0, 0.6),
              0 0 40rpx rgba(255, 215, 0, 0.4),
              inset 0 2rpx 8rpx rgba(255, 255, 255, 0.3);
  animation: keyHighlightPulse 1s ease-in-out infinite;
  transform: scale(1.05);
  border: 3rpx solid rgba(255, 215, 0, 0.8);
  z-index: 1;
  position: relative;
}

@keyframes keyHighlightPulse {
  0%, 100% {
    box-shadow: 0 6rpx 20rpx rgba(255, 215, 0, 0.6),
                0 0 40rpx rgba(255, 215, 0, 0.4);
    transform: scale(1.05);
  }
  50% {
    box-shadow: 0 8rpx 30rpx rgba(255, 215, 0, 0.8),
                0 0 60rpx rgba(255, 215, 0, 0.6);
    transform: scale(1.1);
  }
}

.screen {
  background: linear-gradient(135deg, #667eea 0%, #6b7fd8 50%, #764ba2 100%);
  width: 92%;
  border-radius: 40rpx;
  display: flex;
  flex-flow: row wrap;
  justify-content: center;
  align-items: center;
  padding: 30rpx 20rpx;
  min-height: 300rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.25);
  position: fixed;
  top: 30rpx;
  left: 50%;
  transform: translateX(-50%);
  z-index: 5;
  transition: all 0.3s ease;
}

.singleLetter {
  width: 180rpx;
  text-align: center;
  line-height: 136rpx;
  border-radius: 170rpx;
  font-size: 90rpx;
  font-weight: bold;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  margin: 15rpx;
}

.screenChalenge {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  width: 92%;
  border-radius: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  padding: 30rpx 20rpx;
  min-height: 320rpx;
  max-height: 420rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.25);
  position: fixed;
  top: 30rpx;
  left: 50%;
  transform: translateX(-50%);
  z-index: 5;
  transition: all 0.3s ease;
  /* 优化背景渐变，与页面背景自然衔接 */
  background: linear-gradient(135deg, #667eea 0%, #6b7fd8 50%, #764ba2 100%);
}

/* 挑战模式容器 */
.challengeContainer {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  min-height: 280rpx;
}

/* 挑战模式返回按钮 - 移到中间部分 */
.challengeHeader {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-bottom: 20rpx;
}

/* 中间部分的返回按钮样式 */
.midControll .backBtnText {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: white;
  font-weight: 500;
  width: 100%;
}

.midControll .backBtnText .backIcon {
  font-size: 36rpx;
  color: white;
  margin-right: 6rpx;
  font-weight: bold;
  line-height: 1;
}

.screenChalenge .more {
  font-size: 36rpx;
  color: rgba(255, 255, 255, 0.8);
  text-align: right;
  margin-right: 20rpx;
  margin-top: 20rpx;
  padding: 10rpx 20rpx;
  transition: all 0.2s ease;
  font-weight: 500;
  align-self: flex-end;
}

.screenChalenge .more:active {
  color: #ffd700;
  transform: translateX(-4rpx);
}

.singleWord {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
  min-height: 240rpx;
}

.singleWord .word {
  line-height: 140rpx;
  border-radius: 170rpx;
  font-size: 80rpx;
  font-weight: bold;
  display: flex;
  color: white;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
  margin-bottom: 20rpx;
  min-height: 120rpx;
  align-items: center;
  justify-content: center;
}

.singleWord .pinyin {
  line-height: 136rpx;
  border-radius: 30rpx;
  display: flex;
  font-size: 50rpx;
  width: 50%;
  height: 130rpx;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(79, 172, 254, 0.3);
  font-weight: 500;
}

.singleWord .testPinyin {
  border-radius: 30rpx;
  display: flex;
  font-size: 60rpx;
  width: 85%;
  min-width: 400rpx;
  align-items: center;
  justify-content: space-around;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.25) 0%, rgba(255, 255, 255, 0.15) 100%);
  backdrop-filter: blur(10rpx);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  padding: 20rpx 15rpx;
  margin-top: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  overflow: visible;
  position: relative;
  box-sizing: border-box;
  /* 确保容器大小固定，不受子元素transform影响 */
  contain: layout style;
}

.singleWord .testPinyin .singleTestLetter {
  height: 66%;
  padding: 4rpx 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: rgba(255, 255, 255, 0.5);
  font-weight: 400;
  transition: all 0.4s ease;
  border-radius: 8rpx;
  min-width: 40rpx;
  position: relative;
  transform-origin: center center;
}

.singleWord .testPinyin .singleTestLetter-correct {
  color: #FFD700 !important;
  font-weight: 700;
  font-size: 60rpx;
  text-shadow: 0 0 20rpx rgba(255, 215, 0, 0.8),
               0 0 40rpx rgba(255, 215, 0, 0.5),
               0 2rpx 8rpx rgba(0, 0, 0, 0.3);
  transform: scale(1.15);
  background: rgba(255, 215, 0, 0.15);
  border: 2rpx solid rgba(255, 215, 0, 0.4);
  animation: letterCorrect 0.5s ease-out;
  transform-origin: center center;
  z-index: 1;
}

@keyframes letterCorrect {
  0% {
    transform: scale(0.8);
    opacity: 0.5;
  }
  50% {
    transform: scale(1.25);
  }
  100% {
    transform: scale(1.15);
    opacity: 1;
  }
}

.midControll {
  margin: 0;
  padding: 0 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  position: fixed;
  left: 0;
  right: 0;
  /* 统一按钮位置：题目底部约330-450rpx（识键盘模式最小300rpx，挑战模式最大420rpx），键盘高度约350-450rpx
   * 按钮统一放在500rpx，确保在题目和键盘中间，不与它们重叠
   * 识键盘模式：题目底部约330rpx，按钮500rpx（间距170rpx），按钮底部640rpx
   * 挑战模式：题目底部约450rpx，按钮500rpx（间距50rpx），按钮底部640rpx
   * 键盘顶部约950-1050rpx（假设屏幕1400rpx，键盘350-450rpx高），不会与按钮重叠 */
  top: 500rpx;
  z-index: 11;
  background: transparent;
}

/* 挑战模式下，按钮位置与识键盘模式保持一致 */
.midControll-challenge {
  top: 500rpx;
}


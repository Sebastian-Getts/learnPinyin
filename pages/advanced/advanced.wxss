/* 成功动画样式 - 大气展示 */
.successAnimation {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(8rpx);
  z-index: 99999;
  animation: fadeIn 0.3s ease-out;
  pointer-events: auto;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.successAnimation .successIcon {
  width: 200rpx;
  height: 200rpx;
  line-height: 200rpx;
  text-align: center;
  font-size: 140rpx;
  font-weight: bold;
  color: #ffffff;
  background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
  border-radius: 50%;
  box-shadow: 0 12rpx 40rpx rgba(17, 153, 142, 0.5),
              0 0 80rpx rgba(56, 239, 125, 0.3),
              inset 0 4rpx 12rpx rgba(255, 255, 255, 0.3);
  animation: scaleIn 0.5s cubic-bezier(0.34, 1.56, 0.64, 1) 0.2s both,
             pulse 1.5s ease-in-out 0.7s infinite;
  margin-bottom: 40rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.8);
}

@keyframes scaleIn {
  0% {
    transform: scale(0);
    opacity: 0;
  }
  50% {
    transform: scale(1.2);
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
    box-shadow: 0 12rpx 40rpx rgba(17, 153, 142, 0.5),
                0 0 80rpx rgba(56, 239, 125, 0.3);
  }
  50% {
    transform: scale(1.05);
    box-shadow: 0 16rpx 50rpx rgba(17, 153, 142, 0.6),
                0 0 100rpx rgba(56, 239, 125, 0.4);
  }
}

.successAnimation .successText {
  font-size: 72rpx;
  font-weight: 700;
  color: #ffffff;
  text-align: center;
  margin-bottom: 20rpx;
  text-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.4),
               0 0 40rpx rgba(255, 255, 255, 0.3);
  animation: slideUp 0.5s ease-out 0.4s both;
  letter-spacing: 4rpx;
  background: linear-gradient(135deg, #ffffff 0%, #ffd700 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.successAnimation .successSubText {
  font-size: 36rpx;
  color: rgba(255, 255, 255, 0.9);
  text-align: center;
  font-weight: 500;
  animation: slideUp 0.5s ease-out 0.6s both;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

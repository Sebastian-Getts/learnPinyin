page {
  background: #E7BEE0;
}

.flex-container {
  /* We first create a flex layout context */
  display: flex;
  flex-direction: column;
}

.topbar {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  background: linear-gradient(120deg, rgb(195, 230, 235), rgb(115, 115, 185));
  font-size: 26rpx;
}

.topbar .avatar {
  height: 30rpx;
  width: 30rpx;
  border-radius: 70rpx;
  overflow: hidden;
  margin: 6rpx 20rpx;
}

.topbar .nickname {
  margin-left: 6rpx;
}

.flex-item {
  background-color: rgb(61, 112, 153);
  padding: 5rpx;
  width: 200rpx;
  height: 150rpx;
  margin-top: 20rpx;
  line-height: 150rpx;
  color: white;
  font-weight: bold;
  font-size: 56rpx;
  text-align: center;
  backface-visibility: hidden;
  border-radius: 24rpx;
}

.flex-item:active {
  background-color: rgb(10, 92, 158);
}

.content {
  display: flex;
  flex-flow: row wrap;
  justify-content: space-around;
  margin-bottom: 20rpx;
}

.back {
  transform: rotateY(-360deg);
  position: absolute;
  margin-top: 10rpx;
}

.verticle_group {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.choose-box {
  display: flex;
  flex-flow: row wrap;
  justify-content: space-around;
  padding: 0;
  margin: 0;
  list-style: none;
  border-bottom: solid 1rpx gray;
  background: rgb(110, 106, 129);
}


<view class="flex-container">
  <view class="topbar">
    <view class="avatar">
      <open-data type="userAvatarUrl"></open-data>
    </view>
    {{greet}}
    <open-data type="userNickName"></open-data>
  </view>
  <view class="choose-box">
    <view class="choose" bindtap="choose" id='2' style="background:{{bg2==false?'rgb(156, 118, 153)':'rgb(117, 7, 108)'}}">声母</view>
    <view class="choose" bindtap="choose" id='1' style="background:{{bg1==false?'rgb(156, 118, 153)':'rgb(117, 7, 108)'}}">韵母</view>
    <view class="choose" bindtap="choose" id='3' style="background:{{bg3==false?'rgb(156, 118, 153)':'rgb(117, 7, 108)'}}">字母</view>
    <view class="choose1" bindtap="shuffle">乱序</view>
    <view class="choose3" bindtap="displaybtn">
      <view wx:if="{{display}}">收缩</view>
      <view wx:else>展开</view>
    </view>
    <view class="choose2" bindtap="resume">恢复</view>
  </view>
  <view class="content">
    <view wx:key="{{item.value}}" wx:for="{{list}}" bindtap="reverse" class="{{display==true?'flex-item-display':'flex-item'}}" data-myvalue="{{item.value}}">
      <view wx:if="{{item.flag}}">{{item.name}}</view>
      <view wx:else>{{item.value}}</view>
      <view wx:if="{{display}}">{{item.value}}</view>
    </view>
  </view>
</view>